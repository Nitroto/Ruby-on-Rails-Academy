<%= form_with(model: student, local: true) do |f| %>
    <% if student.errors.any? %>
        <div class="notification is-danger">
          <!--<button class="delete"></button>-->
          <h2><%= pluralize(student.errors.count, 'error') %></h2>

          <ul>
            <% student.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :first_name, 'First name:', class: 'label' %>
      <div class="control">
        <%= f.text_field :first_name, class: 'input' %>
      </div>
    </div>

    <div class="field">
      <%= f.label :last_name, 'Last name:', class: 'label' %>
      <div class="control">
        <%= f.text_field :last_name, class: 'input' %>
      </div>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <%= f.submit student.id? ? 'Update' : 'Create', class: 'button is-primary' %>
      </div>
      <div class="control">
        <%= link_to 'Cancel', student.id? ? @student : students_path, class: 'button is-danger' %>
      </div>
    </div>
<% end %>